{
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "explorer.compactFolders": false,
  "workbench.iconTheme": "vscode-icons",
  "prettier.printWidth": 120,
  "workbench.colorCustomizations": {
    "workbench.colorCustomizations": {
      "editor.selectionBackground": "#000"
    }
  },
  "workbench.colorTheme": "Synthwave x Fluoromachine",
  /* Make self-closing HTML tags glow */
  "vscode_custom_css.imports": [
    "file:///C:/Users/User/.vscode/extensions/webrender.synthwave-x-fluoromachine-0.0.13/synthwave-x-fluoromachine.css"
  ],

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "text.html",
        "settings": {
          "foreground": "#ffffff",
          "fontStyle": "italic"
        }
      },
      {
        "scope": "source.json meta.structure.dictionary.json string.quoted.double.json",
        "settings": {
          "foreground": "#ffffff"
        }
      }
    ]
  }
}
